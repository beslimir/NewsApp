<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="76dp">

    <ImageView
        android:id="@+id/ivArticlePicture"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvArticleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Article title"
        android:layout_toEndOf="@+id/ivArticlePicture"
        android:layout_alignTop="@+id/ivArticlePicture"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvArticleDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvArticleTitle"
        android:layout_toEndOf="@+id/ivArticlePicture"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:gravity="top"
        android:maxLines="2"
        android:text="Description of the article"
        android:textSize="12sp" />

</RelativeLayout>